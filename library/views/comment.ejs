<% include head %>
    <% include partials/topbar-student %>
    <% if(error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="bookdetailWrap blockWrap">
        <div class="mb30 cf">
            <div class="coverWrap"><img src="/images/cover/<%= book.cover %>" alt="<%= book.name %>"></div>
            <div class="infoWrap">
                <h4 class="name"><%= book.name %></h4>
                <p class="auth">作者: <a href="/search?keyword=<%= book.author %>&by=author"><%= book.author %></a></p>
                <p class="publisher">出版社: <%= book.publisher %></p>
                <p class="time">出版时间: <%= book.time %></p>
                <p class="isbn">ISBN: <%= book.isbn %></p>
                <p class="type">所属分类: <a href="/list?type=<%= book.type %>"><%= book.type %></a> > <a href="/list?type=<%= book.type %>&subType=<%= book.subType %>"><%= book.subType %></a></p>
            </div>
        </div>
        
        <form action="/comment" id="commentForm" method="POST">
            <input type="hidden" name="book_id" value="<%= book._id %>">
            <input type="hidden" name="user_id" value="<%= user._id %>">
            <div class="form-group validateInput"> 
                <label for="name">评分</label>
                <input type="number" name="score" class="form-control scoreInput" data-required min="0" max="5">
            </div>
            <div class="form-group"> 
                <label for="intro">评价</label>
                <textarea name="content" id="" class="form-control"></textarea>
            </div>
            <input type="submit" class="submitBtn btn btn-block btn-primary" value="确定">
            <button type="button" class="cancelBtn btn btn-block btn-default">取消</button>
        </form>
    </div>
    <% include partials/footer %>
<% include foot %>