<% for(var i = 0, l = books.length; i < l; i++) { %>
        <div class="bookItem cf">
            <div class="coverWrap"><img src="/images/cover/<%= books[i].cover %>" alt="<%= books[i].name %>"></div>
            <div class="infoWrap">
                <h4 class="name"><a href="/detail/<%= books[i]._id %>"><%= books[i].name %></a></h4>
                <p class="auth">作者: <a href=""><%= books[i].author %></a></p>
                <p class="publisher">出版社: <%= books[i].publisher %></p>
                <p class="time">出版时间: <%= books[i].time %></p>
                <p class="isbn">ISBN: <%= books[i].isbn %></p>
                <% if(books[i].comment) { %>
                    <p><%= books[i].comment.num %> 个人已评: <span class="hr"><%= books[i].comment.score %></span> 分</p>
                <% } else { %>
                    <p>暂无评论</p>
                <% } %>
                <p class="summary clip"><%= books[i].summary %></p>
                <div class="btnWrap">
                    <a href="" class="btn lenBtn btn-primary">马上借阅</a>
                    <a href="" class="btn favoBtn btn-inverse"><span class="fui-heart"></span></a>
                </div>
            </div>
        </div>
<% } %>