<% for(var i = 0, l = books.length; i < l; i++) { %>
        <div class="bookItem cf">
            <div class="coverWrap"><img src="/images/cover/<%= books[i].cover %>" alt="<%= books[i].name %>"></div>
            <div class="infoWrap">
                <h4 class="name"><a href="/detail/<%= books[i]._id %>"><%= books[i].name %></a></h4>
                <p class="auth">作者: <a href="/search?keyword=<%= books[i].author %>&by=author"><%= books[i].author %></a></p>
                <p class="date">借书日期: <%= borrowDate[i] %></p>
                <% if(page === 'borrow') { %>
                    <p class="returnDate">还书日期: <%= returnDate[i] %><span>还有 <b class="interval" data-end="<%= returnDate[i] %>"></b> 天</span></p>
                <% } else if(page === 'return') { %>
                    <p class="returnedDate">还书日期: <%= returnDate[i] %></p>
                <% } %>
                <div class="btnWrap">
                    <% if(page === 'borrow') { %>
                        <a href="/returning/<%= books[i]._id %>" class="btn lenBtn btn-primary">马上还书</a>
                    <% } else if(page === 'return') { %>
                        <a href="/comment/<%= books[i]._id %>" class="btn lenBtn btn-primary">马上评价</a>
                    <% } %>
                </div>
            </div>
        </div>
<% } %>