<%- include head %>
    <%- include topbar-admin %>
    <h4>新增图书</h4>
    <form action="/add" method="POST" class="addBook">
        <div class="form-group"> 
            <label for="name">书名</label>
            <input type="text" name="name">
        </div>
        <div class="form-group"> 
            <label for="author">作者</label>
            <input type="text" name="author">
        </div>
        <div class="form-group"> 
            <label for="publisher">出版社</label>
            <input type="text" name="publisher">
        </div>
        <div class="form-group"> 
            <label for="time">出版时间</label>
            <input type="text" name="time">
        </div>
        <div class="form-group"> 
            <label for="isbn">ISBN</label>
            <input type="text" name="isbn">
        </div>
        <div class="form-group"> 
            <label for="type">分类</label>
            <select name="type" id="type">

            </select>
            <select name="subType" id="subType">
                
            </select>
        </div>
        <div class="form-group"> 
            <label for="haveNum">藏书数</label>
            <input type="text" name="haveNum">
        </div>
        <div class="form-group"> 
            <label for="summary">内容简介</label>
            <textarea name="summary" id="" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group"> 
            <label for="list">目录</label>
            <textarea name="list" id="" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group"> 
            <label for="intro">前言</label>
            <textarea name="intro" id="" cols="30" rows="10"></textarea>
        </div>
        <input type="submit" value="确定">
        <button type="button">取消</button>
    </form>
<%- include foot %>