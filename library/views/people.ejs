<%- include head %>
    <%- include partials/topbar-admin %>
    <% if(error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="blockWrap">
        <h4 class="viewBook-title">人员管理<a href="javascript:history.go(-1)" class="title-back">返回</a>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>学号或编号</th>
                        <th>身份</th>
                        <th>编辑</th>
                    </tr>       
                </thead>
                <tbody>
                    <% for(var i = 0, l = users.length; i < l; i++) { %>
                        <tr>
                            <td><%= users[i].no %></td>
                            <td><%= users[i].identity %></td>
                            <td>
                                <% if(users[i].identity === '学生') { %>
                                    <a href="/removeUser/<%= users[i]._id %>">删除</a>
                                <% } else { %>
                                    无法删除
                                <% } %>
                            </td>
                        </tr> 
                    <% } %>
                </tbody>
            </table>
        </div>
    <% include partials/footer %>
<%- include foot %>