<% include head %>
    <% include partials/topbar-student %>
    <div class="bookListWrap blockWrap meWrap">
        <% if(error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="selectWrap">
            <select id="returnOrNot">
                <option value="borrow">未还图书</option>
                <option value="returning">已还图书</option>
            </select>
        </div>
        <% if(page === 'borrow') { %>
            <h6 class="b">未还图书</h6>
        <% } else if(page === 'return') { %>
            <h6 class="b">已还图书</h6>
        <% } %>
        
        <% if (books.length ===0) { %>
            <div class="notFound">
                你没有借书哦~ 快去借一本吧!
            </div>
        <% } else { %>
            <div class="bookList">
                <%- include partials/bookItem-borrow %>
            </div>
        <% } %>
    </div>
    <% include partials/footer %>

<% include foot %>