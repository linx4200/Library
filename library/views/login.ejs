<%- include head %> 
<body class="login-body">
    <div class="login-screen">
        <div class="login">
            <div class="login-icon">
                <img src="/images/book.png" alt="Welcome to 图书借阅管理系统" />
                <h4>Welcome to <span class="b">图书借阅管理系统</span></h4>
            </div>

            <div class="login-form">
                <div class="form-group">
                    <input type="text" class="form-control login-field" value="" placeholder="请输入学号或邮箱或昵称" id="login-name" />
                    <label class="login-field-icon fui-user" for="login-name"></label>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control login-field" value="" placeholder="请输入密码" id="login-pass" />
                    <label class="login-field-icon fui-lock" for="login-pass"></label>
                </div>

                <a class="btn btn-primary btn-lg btn-block" href="#">登录</a>
                <a class="login-link" href="#">忘记密码 ?</a>
                <a class="login-link" href="#">没有账号 ?</a>
            </div>
        </div>
        
    </div>
</body>
</html>