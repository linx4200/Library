<%- include head %> 
<body class="login-body">
    <div class="login-screen">
        <div class="login cf center">
            <div class="login-icon">
                <img src="/images/book.png" alt="Welcome to 图书借阅管理系统" />
                <h4>Welcome to <span class="b">图书借阅管理系统</span></h4>
            </div>

            <form class="login-form" action="/login" method="POST">
                <div class="form-group">
                    <label class="radio">
                        <input type="radio" name="identity" id="optionsRadios1" value="student" data-toggle="radio" checked="checked">
                        学生
                      </label>
                      <label class="radio">
                        <input type="radio" name="identity" id="optionsRadios2" value="admin" data-toggle="radio">
                        管理员
                      </label>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control login-field" value="" placeholder="请输入学号" id="login-name" name="no" />
                    <label class="login-field-icon fui-user" for="no"></label>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control login-field" value="" placeholder="请输入密码" id="login-pass" name="password" />
                    <label class="login-field-icon fui-lock" for="password"></label>
                </div>

                <% if(error) { %>
                    <div class="form-error">
                        <span class="alert-ico"></span><span class="alert-text"><%= error %></span>
                    </div>
                <% } %>
                
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="登录">
                <a class="login-link" href="#">忘记密码 ?</a>
                <a class="login-link" href="/signup">没有账号 ?</a>
            </div>
        </div>
    </div>
    <script src="/js/jquery-1.10.2.min.js"></script>
    <script src="/js/flatui-radio.js"></script>
</body>
</html>