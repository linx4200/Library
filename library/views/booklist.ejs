<% include head %>
    <% include partials/topbar-student %>
    <% if(error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="bookListWrap blockWrap">
        <% include partials/breadcrumb %>
        <div class="filter">
            <div class="sortWrap">
                <span class="title">排序:</span>
                <% if ( type && !subType) { %>
                    <span id="sort-default" class="sort"><a href="/list?type=<%= type %>">默认</a></span>
                    <span id="sort-time" class="sort"><a href="/list?type=<%= type %>&sort=time">出版时间</a></span>
                    <span id="sort-comment" class="sort"><a href="/list?type=<%= type %>&sort=comment">评分</a></span>
                <% } %>
                <% if ( subType ) { %>
                    <span id="sort-default" class="sort"><a href="/list?type=<%= type %>&subtype=<%= subType %>">默认</a></span>
                    <span id="sort-time" class="sort"><a href="/list?type=<%= type %>&subtype=<%= subType %>&sort=time">出版时间</a></span>
                    <span id="sort-comment" class="sort"><a href="/list?type=<%= type %>&subtype=<%= subType %>&sort=comment">评分</a></span>
                <% } %>
                
                <label class="checkbox lendableLabel" for="lendable">
                    <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span><input type="checkbox" value="" id="lendable" data-toggle="checkbox">仅显示可借图书
                </label>
            </div>
        </div>
        <% if (books.length ===0) { %>
            <div class="notFound">
                很抱歉,该分类下没有图书...
            </div>
        <% } else { %>
            <div class="bookList">
                <%- include partials/bookItem %>
            </div>
        <% } %>
    </div>
    <% include partials/footer %>
<% include foot %>